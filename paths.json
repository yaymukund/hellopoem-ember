{
  "client": [
    "shared/util.js",
    "client/application.js",
    "client/models/**/*.js",
    "client/store.js",
    "client/controllers/**/*_controller.js",
    "client/router.js"
  ],

  "server": [
    "server/*.js",
    "server/controllers/**/*.js",
    "server/models/**/*.js",
    "server/views/**/*.js"
  ],

  "template": {
    "source": ["client/templates/**/*.hbs"],
    "compiled": ["client/templates/compiled/**/*.js"],
    "compile_directory": "client/templates/compiled"
  },

  "test": [
    "server/test/**/*_test.js",
    "client/test/**/*_test.js"
  ],

  "app": "server/public/vendor/hellopoem.js"
}
